{
  "name": "sign-in-with-stacks",
  "version": "0.2.0",
  "license": "MIT",
  "description": "Sign-in with Stacks is a library for creating and verifying Sign-In with Stacks messages",
  "keywords": [
    "stacks",
    "siws",
    "sign-in-with-stacks"
  ],
  "repository": "pradel/sign-in-with-stacks",
  "funding": "https://github.com/sponsors/pradel",
  "type": "module",
  "sideEffects": false,
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./plugins": {
      "types": "./dist/plugins/index.d.ts",
      "default": "./dist/plugins/index.js"
    },
    "./plugins/better-auth": {
      "types": "./dist/plugins/better-auth/index.d.ts",
      "default": "./dist/plugins/better-auth/index.js"
    },
    "./plugins/better-auth/client": {
      "types": "./dist/plugins/better-auth/client.d.ts",
      "default": "./dist/plugins/better-auth/client.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "src/**/*.ts",
    "!src/**/*.test.ts"
  ],
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc --noEmit",
    "dev": "tsdown --watch",
    "lint": "oxlint .",
    "test": "vitest"
  },
  "devDependencies": {
    "@stacks/encryption": "7.3.1",
    "@stacks/network": "7.3.1",
    "@stacks/transactions": "7.3.1",
    "@tsconfig/recommended": "1.0.13",
    "@types/node": "25.3.0",
    "better-auth": "1.4.18",
    "better-sqlite3": "^12.6.2",
    "publint": "0.3.17",
    "tsdown": "0.20.3",
    "typescript": "5.9.3",
    "vitest": "4.0.18",
    "zod": "4.3.6"
  },
  "peerDependencies": {
    "@stacks/common": "^7.0.2",
    "@stacks/encryption": "^7.0.2",
    "@stacks/network": "^7.0.2",
    "@stacks/transactions": "^7.0.2",
    "better-auth": "^1.3.0",
    "zod": "^3.0.0 || ^4.0.0"
  },
  "peerDependenciesMeta": {
    "better-auth": {
      "optional": true
    },
    "zod": {
      "optional": true
    }
  }
}
